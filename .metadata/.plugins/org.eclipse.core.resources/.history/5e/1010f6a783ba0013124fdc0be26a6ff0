import java.io.*;
import java.util.*;
public class project17 {
	public static void main(String args[]) {
		System.out.print("Enter something like 8 + 33 + 1,345 +137 : ");
		Scanner q = new Scanner(System.in);
		String e = q.nextLine();
		Scanner equation = new Scanner(e);
		equation.useDelimiter("");
		int total = equation.nextInt();
		String prev = "";
		String curr = "";
		String currint = "";
		
		while(equation.hasNext()) {
			prev = curr;
			curr = equation.next();
			if (prev == "" || (currint != "" && curr != "+" && curr != "-")) {
				currint += curr;
				System.out.println("Building curr: ");
				System.out.print(curr);
			}
			else if (curr == "+") {
				total += Integer.parseInt(currint);
				System.out.println("Adding curr to total: ");
				System.out.print(total);
				currint = "";
			}
			else if (curr == "-") {
				System.out.println("Subtracting curr from total: ");
				System.out.print(total);
				total -= Integer.parseInt(currint);
				currint = "";
			}
		}
		System.out.println("total:");
		System.out.println(total);
	}
}
