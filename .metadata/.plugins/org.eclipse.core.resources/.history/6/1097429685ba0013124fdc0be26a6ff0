import java.io.*;
import java.util.*;
public class project17 {
	public static void main(String args[]) {
		System.out.print("Enter something like 8 + 33 + 1,345 +137 : ");
		Scanner q = new Scanner(System.in);
		String e = q.nextLine();
		Scanner equation = new Scanner(e);
		equation.useDelimiter("");
		int total = 0;
		String prev = "";
		String curr = "";
		String currint = "";
		
		while(equation.hasNext()) {
			if (curr != "") {
				prev = curr;
			}
			
			curr = equation.next();
			if (curr == "") {
				curr = equation.next();
			}
			
			if (curr != "+" && curr != "-") {
				currint = currint + curr;
				System.out.println("IF - Building curr: "+curr);
				System.out.println("IF - currint: "+currint);
			}
			else if (curr == "+") {
				total += Integer.parseInt(currint);
				System.out.println("PLUS - Adding curr to total: "+total);
				currint = "";
			}
			else if (curr == "-") {
				System.out.println("MINUS - Subtracting curr from total: "+total);
				total -= Integer.parseInt(currint);
				currint = "";
			}
		}
		System.out.println("total:");
		System.out.println(total);
	}
}
